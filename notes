# In Ubuntu VM

sudo apt-get update 

sudo apt-get install open-vm-tools-desktop

sudo apt-get install openssh-server

sudo apt-get install eclipse

<install unity tweak tool and activate xmouse behaviour and menus on windows>



# Ubuntu install docker

## add a repository osä

 sudo apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D

## install docker-engine

sudo apt-get install docker-engine
sudo service docker start
sudo docker run hello-world



# Ubuntu install cleanup commands
https://github.com/wsargent/docker-cheat-sheet


docker kill $(docker ps -q)

docker ps -a | grep 'weeks ago' | awk '{print $1}' | xargs docker rm

docker rm -v $(docker ps -a -q -f status=exited)

docker rmi $(docker images -q -f dangling=true)

docker rmi $(docker images -q)

docker volume rm $(docker volume ls -q -f dangling=true)


# Ubuntu install erlang

see https://www.erlang-solutions.com/resources/download.html

wget https://packages.erlang-solutions.com/erlang-solutions_1.0_all.deb
sudo dpkg -i erlang-solutions_1.0_all.deb

wget https://packages.erlang-solutions.com/ubuntu/erlang_solutions.asc
sudo apt-key add erlang_solutions.asc

sudo apt-get update
sudo apt-get install erlang <or> sudo apt-get install esl-erlang


# Ubuntu VM needs Proxy at different Places
  export http_proxy=http://hebunjes:gbfubI20@btchttp.btc-ag.com:8080
  export https_proxy=http://hebunjes:gbfubI20@btchttp.btc-ag.com:8080

- Docker
  /etc/systemd/system/docker.service.d/http-proxy

- Browser
  Sytemsteuerung / Netzwerk
  Im Browser dann auf uses systemwide osä stellen

- apt
  /etc/apt/apt.conf
  
- Für wen?
  /home/user/.profile  
  not visible in bash

- GIT
  git config --global http.proxy $http_proxy

